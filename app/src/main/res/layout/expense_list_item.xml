<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="2dp"

    android:background="@color/highlight_color">

    <TextView
        android:id="@+id/title_in_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:background="@color/inner_module_color"
        android:textColor="@color/dark_text_color"/>

    <TextView
        android:id="@+id/desc_in_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:background="@color/inner_module_color"
        android:textColor="@color/dark_text_color"/>

    <TextView
        android:id="@+id/cost_in_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:background="@color/step_up_background_color"
        android:textColor="@color/light_text_color"/>

</LinearLayout>